{
  "format_version": "1.10.0",
  "minecraft:client_entity": {
    "description": {
      "identifier": "minecraft:polar_bear",
      "materials": {
        "default": "polar_bear"
      },
      "textures": {
        "default": "textures/entity/polarbear"
      },
      "geometry": {
        "default": "geometry.polarbear"
      },
      "animations": {
        "walk": "animation.quadruped.walk",
        "move": "animation.polarbear.move",
        "look_at_target": "animation.common.look_at_target",
        "baby_transform": "animation.polarbear.baby_transform",
        "move_controller": "controller.animation.polarbear.move",
        "baby_controller": "controller.animation.polarbear.baby"
      },
      "scripts": {
        "scale": "1.2",
        "pre_animation": [
          "v.temp_dir_x = q.position(0) - v.pos_x;",
          "v.temp_dir_z = q.position(2) - v.pos_z;",
          "v.is_moving = (v.temp_dir_x!=0)||(v.temp_dir_z!=0);",
          "v.dir_x = v.is_moving ? -v.temp_dir_x : v.dir_x;",
          "v.dir_z = v.is_moving ? -v.temp_dir_z : v.dir_z;",

          "v.pos_x = q.position(0);",
          "v.pos_z = q.position(2);"
        ],
        "animate": [
          "move_controller",
          "baby_controller"
        ],
        "initialize": [
          "v.pos_x = q.position(0);",
          "v.pos_z = q.position(2);",
          "v.dir_x = 0;",
          "v.dir_z = 0;",
          "v.temp_dir_x = 0;",
          "v.temp_dir_z = 0;",
          "v.is_moving = 0;",
          "v.is_init = 0;"
        ]
      },
      "render_controllers": [
        "controller.render.polarbear"
      ],
      "spawn_egg": {
        "texture": "spawn_egg_polar_bear"
      }
    }
  }
}